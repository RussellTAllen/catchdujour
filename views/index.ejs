<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catch du Jour!</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
        <h1>Catch your very own blog space!</h1>
        <% if (user === 'guest' || !user) {%>
            <a href="/login"> Login</a>
            <a href="/signup"> Signup</a>
        <% } else {%>
            <a href="/logout">Logout</a>
            <a href="/catchPosts">Go To Your Profile</a>
            <a href="/createCatchPage">(new) Create Your Own Post</a>
        <% } %>

    </header>

    <% console.log('index.ejs loading...') %>
    <% console.log('user: '+user) %>
    <main>
        <p>
            <% if (user !== 'guest' || !user) {%>
                <%= user.userName %> is logged in
                <% if (user.omittedCatchegories) {%>
                    <p>Posts with <%= user.omittedCatchegories.join(', ') %> catchegories will not be displayed.</p>
                <% } %>
            <%} else{ %>
                Not logged in
            <% } %> 
        </p>

        <!-- Filter out user's omitted catchegories -->
        <% if (user !== 'guest') {%>
            <% console.log('catchegory object '+catchPosts.forEach(p => p.catchegories)) %>
            <% catchPosts = catchPosts.filter(post => post.catchegories.every(cat => !user.omittedCatchegories.includes(cat))) %>
        <% } %>

        <!-- Sort by New, Tastiest, Most Talked About -->
        <a href="/">Freshest</a>  |  
        <a href="/mostLiked">Tastiest</a>  |  
        <a href="/mostCommented">Most Chewed On</a>

        <!-- Print posts-->
        <% catchPosts.forEach( el => { %>
            <div class="catch-post" data-id="<%=el._id%>">
                <h3><a href="catchPosts/<%= el._id%>/catchPost"><%= el.catchTitle %></a></h3>
                <h5>Posted by: <em><a href="catchPosts/<%= el.postedBy._id %>"><%= el.postedBy.userName %></a></em> on <%= el.date %></h5>
                <span class="catchPost"><%= el.catchContent %></span>
                <% if (!el.catchegories[0]) { %>
                    <p>No catchegories selected</p>
                <%} else { %>
                    <p>Catchegories: <%= el.catchegories %></p>
                <% } %>
                <% if (user !== 'guest') {%>
                    <button type="button" class="likes">Likes: </button><%= el.likes %>
                <% }else{%>
                    <span>Likes: <%= el.likes %></span>
                <% } %>
                <span>Comments: <%= el.comments.length %></span>
                <% if (user.userName === el.postedBy.userName) {%>
                    <span class="del"> Delete </span>
                <% } %>
            </div>
            <% console.log('postedBy: '+el.postedBy.userName) %>

        <% }) %>    
    </main>
    <script src="js/main.js"></script>
</body>
</html>